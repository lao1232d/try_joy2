<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lw.dao.EmployeeMapper">

    <insert id="add" parameterType="Employee">
        insert into denglu.Employee (ename, age, sex, address)
    </insert>

    <delete id="deleteEmployeeById" parameterType="Long">
        delete from denglu.Employee where eid = #{eid}
    </delete>

<!--    deleteEmployeeById(Long id)-->

<!--    updateEmployee(Employee employee)-->

    <update id="updateEmployee" parameterType="Employee">
        update denglu.Employee
        set ename = #{ename},age = #{age}, sex = #{sex}, address = #{address}
    </update>

    <select id="queryAll" resultType="List">
        select * from denglu.Employee
    </select>

</mapper>